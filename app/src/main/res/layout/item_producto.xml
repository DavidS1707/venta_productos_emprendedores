<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Etiqueta para el nombre del producto -->
    <TextView
        android:id="@+id/txtLabelNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Producto:"
        android:textStyle="bold" />

    <!-- TextView para mostrar el nombre del producto -->
    <TextView
        android:id="@+id/nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- Etiqueta para el precio del producto -->
    <TextView
        android:id="@+id/txtLabelPrecioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio del Producto:"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <!-- TextView para mostrar el precio del producto -->
    <TextView
        android:id="@+id/precioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp" />


    <!-- Layout horizontal para los botones de editar y eliminar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Botón para editar -->
        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_weight="1" />

        <!-- Botón para eliminar -->
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
